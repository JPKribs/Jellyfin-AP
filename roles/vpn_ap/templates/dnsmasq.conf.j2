interface={{ wireless_interface }}
bind-interfaces

dhcp-range={{ ap_dhcp_start }},{{ ap_dhcp_end }},{{ ap_netmask }},24h
dhcp-option=3,{{ ap_ip }}
dhcp-option=6,1.1.1.1,1.0.0.1

server=1.1.1.1
server=1.0.0.1
no-resolv

domain=local
address=/{{ system_hostname }}.{{ system_domain }}/{{ ap_ip }}
address=/{{ system_hostname }}.local/{{ ap_ip }}

dhcp-authoritative
